@model ThAmCo.Customer.Web.Models.ProductsIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="jumbotron">
    <div class="container">
        <h1>Our Products</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header">
                    <button class="btn btn-link" data-toggle="collapse" href="#searchCollapse" role="button">
                        Search
                    </button>
                </div>
                <div id="searchCollapse" class="collapse show">
                    <div class="card-body">
                        <form method="get">
                            <div class="form-group">
                                <label>Search</label>
                                <input type="text" class="form-control" name="term" placeholder="Search...">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Search</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">
                    <button class="btn btn-link" data-toggle="collapse" href="#priceCollapse" role="button">
                        Price
                    </button>
                </div>
                <div id="priceCollapse" class="collapse show">
                    <div class="card-body">
                        <form method="get">
                            <div class="form-group">
                                <label>Min Price</label>
                                <input type="text" class="form-control" name="minPrice" min="0" placeholder="Min Price">
                            </div>
                            <div class="form-group">
                                <label>Max Price</label>
                                <input type="text" class="form-control" name="maxPrice" min="0" placeholder="Max Price">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Show</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">
                    <button class="btn btn-link" data-toggle="collapse" href="#brandCollapse" role="button">
                        Brands
                    </button>
                </div>
                <div id="brandCollapse" class="collapse show">
                    <div class="card-body">
                        @foreach (var item in Model.Brands)
                        {
                            <p onclick="update(@item.Id, 'brands')" style="cursor: pointer">@item.Name</p>
                        }
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <button class="btn btn-link" data-toggle="collapse" href="#categoryCollapse" role="button">
                        Categories
                    </button>
                </div>
                <div id="categoryCollapse" class="collapse show">
                    <div class="card-body">
                        @foreach (var item in Model.Categories)
                        {
                            <p onclick="update(@item.Id, 'categories')" style="cursor: pointer">@item.Name</p>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <partial name="_ProductsList" model="Model.Products" />
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        function update(id, type) {
            var url = window.location.href;
            var slash = url.charAt(url.length - 1) == "/" ? "" : "/";
            var sep = url.includes('?') ? '&' : slash + '?';

            if (url.includes(type + '=' + id)) {
                url = url.replace('/?' + type + '=' + id + "&", "/?");
                url = url.replace('/?' + type + '=' + id, "");
                url = url.replace('&' + type + '=' + id, "");
            } else {
                url = url.concat(sep + type + '=' + id);
            }

            window.location.href = url;
        }
    </script>
}