@model IEnumerable<ThAmCo.Customer.Models.ProductDto>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <a asp-action="Details" asp-route-id="@item.Id" class="product mb-5">
                <img src="//via.placeholder.com/250" class="img-fluid">
                <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                <h6 class="card-subtitle text-muted">@Html.DisplayFor(modelItem => item.Currency)@Html.DisplayFor(modelItem => item.Price)</h6>
            </a>
        </div>
    }

    @if(Model.Count() == 0)
    {
        <div class="col-md-12">
            <p>No products could be found.</p>
        </div>
    }
</div>