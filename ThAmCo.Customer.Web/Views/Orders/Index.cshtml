@model IEnumerable<ThAmCo.Customer.Models.OrderGetDto>

@{
    ViewData["Title"] = "Orders";
}

<div class="jumbotron">
    <div class="container">
        <h1>Your Order History</h1>
    </div>
</div>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <img src="//via.placeholder.com/250" class="img-fluid">
                    </div>
                    <div class="col-md-6">
                        <h3>@Html.DisplayFor(modelItem => item.Product.Name)<br /><small>Order @Html.DisplayFor(modelItem => item.Id)</small></h3>
                        <p class="mb-0"><b>Item Price:</b> @Html.DisplayFor(modelItem => item.Price)</p>
                        <p class="mb-0"><b>Status:</b> @Html.DisplayFor(modelItem => item.Status)</p>
                        <p><b>Date:</b> @Html.DisplayFor(modelItem => item.CreationDate)</p>
                        <a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@item.Product.Id">View the product</a>
                        <a class="btn btn-outline-dark" href="#">Write a review</a>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col-md-12">
                <p>You have no orders.</p>
            </div>
        </div>
    }
</div>